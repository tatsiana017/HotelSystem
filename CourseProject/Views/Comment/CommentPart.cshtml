                    </div>
                    <div class="post-entry-comments-text">
                        @item.Text
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="viewDialog" , data-dialog-title="Delete model"
                               href="@Url.Action("Delete", "Comment", new { id = item.CommentId }, null)">
                                Delete
                            </a>
                        }
                    </div>
                </li>
            }
        }
    </ul>
</div>*@
