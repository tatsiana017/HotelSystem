<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Media/layout.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/DayPilot/daypilot-all.min.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
             
                <a href="~/Home/Index">
                   <img src="~/Images/ааа.png" height="70" alt="tratata" />
                </a>
              
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("О нас", "Index", "Home")</li>
                    <li>@Html.ActionLink("Найти отель", "SearchHotel", "Home")</li>
                    @*<li>@Html.ActionLink("Избранное", "Contact", "Home")</li>*@
                </ul>
               
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="shadow"></div>
    <div class="hideSkipLink">
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @*<p>&copy; Hotel Managment System</p>*@
            <div class="wrap-footer">
                <div class="zerogrid">
                    <div class="row">
                        <div class="col-1-3">
                            <div class="wrap-col">
                                <p>Hotel System Management</p>
                            </div>
                        </div>
                        <div class="col-1-3">
                            <div class="wrap-col">
                                <ul class="social-buttons">
                                    <li>
                                        <a href="#"><i class="fa fa-twitter" style="position: relative; top: -10px;"></i></a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-facebook" style="position: relative; top: -10px;"></i></a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-linkedin" style="position: relative; top: -10px;"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-1-3">
                            <div class="wrap-col">
                                <ul class="quick-link">
                                    <li>For Hilton</li>
                                  
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.12.1.js")

    @RenderSection("scripts", required: false)
</body>
</html>
